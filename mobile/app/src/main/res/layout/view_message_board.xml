<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C7E3F1"
    android:padding="10dp"
    tools:context=".MessageBoardActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#66B0E0"
                android:backgroundTint="#73BFDA"
                android:fontFamily="serif"
                android:gravity="center_horizontal"
                android:padding="9dp"
                android:text="Your Message Board"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="30sp" />




            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></RadioGroup>


            <Button
                android:id="@+id/select_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#72CF75"
                android:fontFamily="serif"
                android:padding="9dp"
                android:text="Select this post..."
                android:textStyle="bold"
                android:onClick="onSelectButtonClick"/>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>