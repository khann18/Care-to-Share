<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="6dp"
    android:layout_height="match_parent">




        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="22dp"
                    android:paddingLeft="4dp"
                    android:text="Message Board"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="27dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/logout_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="20dp"
                    android:minHeight="45dp"
                    android:text="Logout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/create_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="307dp"
                    android:layout_marginTop="20dp"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:maxWidth="20dp"
                    android:minWidth="20dp"
                    android:src="@drawable/ic_create_24px"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/edit_profile_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="350dp"
                    android:layout_marginTop="20dp"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:maxWidth="20dp"
                    android:minWidth="20dp"
                    android:src="@drawable/profile_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:orientation="vertical">


                <!--            <TextView-->
                <!--                android:id="@+id/header"-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_gravity="center"-->
                <!--                android:background="#66B0E0"-->
                <!--                android:backgroundTint="#73BFDA"-->
                <!--                android:fontFamily="serif"-->
                <!--                android:gravity="center_horizontal"-->
                <!--                android:padding="9dp"-->
                <!--                android:text="Your Message Board"-->
                <!--                android:textAlignment="center"-->
                <!--                android:textAppearance="@style/TextAppearance.AppCompat.Large"-->
                <!--                android:textSize="20sp" />-->


                <TextView
                    android:id="@+id/noMessages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="serif"
                    android:includeFontPadding="true"
                    android:lineSpacingExtra="10sp"
                    android:padding="15dp"
                    android:text="No new claims have been made on your posts. You have no messages."
                    android:textAlignment="viewStart"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/radiogroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="20dp"></RadioGroup>


                <Button
                    android:id="@+id/select_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#009082"
                    android:fontFamily="serif"
                    android:onClick="onSelectButtonClick"
                    android:padding="9dp"
                    android:text="Respond to this post..."
                    android:textColor="#FFFFFFFF"
                    android:textStyle="bold" />


            </LinearLayout>

            </RelativeLayout>
        </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>