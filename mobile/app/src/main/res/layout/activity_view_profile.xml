<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="34dp"
        android:paddingRight="24dp">


        <!--                Profile Picture-->

        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="341dp"
            android:layout_height="150dp"
            android:paddingLeft="0dp" />


        <TextView
            android:id="@+id/profile_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Profile"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="25dp" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView android:id="@+id/firstName"
                android:textColor="#000000"
                android:layout_weight="1"
                android:textSize="20dp"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:inputType="textCapWords"
                android:hint="First name" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView android:id="@+id/input_email"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:padding="10dp"
                android:inputType="textEmailAddress"
                android:gravity="center"
                android:background="@drawable/rounded_corner"
                android:hint="Email" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView android:id="@+id/input_phone_number"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:padding="10dp"
                android:gravity="center"
                android:inputType="textCapWords"
                android:background="@drawable/rounded_corner"
                android:hint="Phone number" />
        </LinearLayout>


        <!-- Organization/Location -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/input_organization"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:textColor="#000000"
                android:background="@drawable/rounded_corner"
                android:padding="10dp"
                android:hint="Organization" />
            <TextView android:id="@+id/input_location"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#000000"
                android:padding="10dp"
                android:background="@drawable/rounded_corner"
                android:layout_height="wrap_content"
                android:hint="Nearest city" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <TextView android:id="@+id/account_type"
                android:inputType="none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:textColor="#000000"
                android:gravity="center"
                android:padding="10dp"
                android:hint="Account type"/>


        </LinearLayout>

        <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView android:id="@+id/tags"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:padding="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:inputType="textCapWords"
                        android:background="@drawable/rounded_corner"
                        android:hint="Most used tags" />
                </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">
                <TextView android:id="@+id/num_posts"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:padding="10dp"
                    android:inputType="textCapWords"
                    android:background="@drawable/rounded_corner"
                    android:hint="Number of posts" />

                <TextView android:id="@+id/num_portions"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:gravity="center"
                    android:inputType="textCapWords"
                    android:background="@drawable/rounded_corner"
                    android:hint="Number of portions" />
            </LinearLayout>

        <TextView
            android:id="@+id/top_donor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/colorAccent"
            android:background="@drawable/rounded_corner"
            android:gravity="center"
            android:hint="top donor"
            android:inputType="none"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>